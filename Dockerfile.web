# WEBCLIENT IMAGE
FROM ubuntu:16.04

USER root

# INSTALL NON PYTHON DEPENDENCIES
RUN apt-get update && \
  apt-get install -y --no-install-recommends \
    build-essential \
    python-dev \
    python-setuptools \
    python-pip \
    git \
    libffi-dev \
    libssl-dev \
    libpcre3 \
    libpcre3-dev \
    pkg-config \
    autoconf && \
  rm -rf /var/lib/apt/lists/*

# INSTALL AND UPGRAGE PYTHON SETUPTOOLS
RUN pip install setuptools --upgrade

# CREATE FOLDER STRUCTURE
COPY ./webclient/entrypoint.sh /
COPY ./webclient /opt/project/webclient/
COPY ./config.py /opt/project/webclient/
COPY ./worker /opt/project/worker/
COPY ./config.py /opt/project/worker/

WORKDIR /opt/project/webclient/

# INSTALL PYTHON DEPENDENCIES
RUN pip install -r requirements.txt

# IMPORT THUG WEB BROWSER PERSONALITIES
RUN git clone https://github.com/buffer/thug.git /tmp/thug && \
    cp /tmp/thug/thug/DOM/personalities/* /opt/project/webclient/api/models/personalities

# IMPORT FRONTEND
RUN git clone https://github.com/trhlikpa/thug-framework-ui.git /tmp/frontend && \
    cp -r /tmp/frontend/dist/* /opt/project/webclient/frontend

# CREATE USER, ENV_PATH
RUN groupadd -r web && \
  useradd -r -g web -d /home/web -s /sbin/nologin -c "webclient" web && \
  mkdir -p /home/web && \
  chown -R web:web /home/web /opt/project /entrypoint.sh

ENV PYTHONPATH /opt/project/

# CLEAN UP
RUN apt-get -y remove \
      build-essential \
      python-dev \
      python-setuptools \
      python-pip \
      git

RUN rm -rf /tmp/thug/*
RUN rm -rf /tmp/frontend/*

USER web